#include <iostream>
#include <cstdlib>
#include <ctime>

void fillRandomGrades(double* grades, int count) {
    for (int i = 0; i < count; ++i) {
        grades[i] = 60 + std::rand() % 41;
    }
}

double calculateAverage(double* grades, int count) {
    double sum = 0;
    for (int i = 0; i < count; ++i) {
        sum += grades[i];
    }
    return sum / count;
}

int main() {
    std::srand(static_cast<unsigned>(std::time(nullptr)));

    const int count = 5;
    double* grades = new double[count];

    fillRandomGrades(grades, count);

    std::cout << "Student grades: ";
    for (int i = 0; i < count; ++i) {
        std::cout << grades[i] << " ";
    }

    double average = calculateAverage(grades, count);
    std::cout << "\nAverage grade: " << average << std::endl;

    delete[] grades;
    return 0;
}
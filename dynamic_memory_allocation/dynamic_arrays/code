#include <iostream>
#include <iomanip> 

void analyzeTemperatures(double* temps, int hours) {
    double sum = 0;
    double minTemp = temps[0];
    double maxTemp = temps[0];

    for (int i = 0; i < hours; ++i) {
        sum += temps[i];
        if (temps[i] < minTemp) minTemp = temps[i];
        if (temps[i] > maxTemp) maxTemp = temps[i];
    }

    double average = sum / hours;

    std::cout << std::fixed << std::setprecision(2);
    std::cout << "\nMinimum temperature: " << minTemp << "°C";
    std::cout << "\nMaximum temperature: " << maxTemp << "°C";
    std::cout << "\nAverage temperature: " << average << "°C" << std::endl;
}

int main() {
    int hoursInDay = 24;

    double* temperatures = new double[hoursInDay]{
        15.2, 14.8, 14.5, 14.3, 14.0, 14.1,
        15.0, 16.5, 18.0, 19.5, 21.0, 22.2,
        23.0, 23.5, 23.8, 23.4, 22.8, 21.5,
        20.0, 18.5, 17.2, 16.0, 15.5, 15.0
    };

    std::cout << "Hourly temperatures: ";
    for (int i = 0; i < hoursInDay; ++i) {
        std::cout << temperatures[i] << " ";
    }

    analyzeTemperatures(temperatures, hoursInDay);

    delete[] temperatures;
    return 0;
}